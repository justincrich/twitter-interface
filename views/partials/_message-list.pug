.grid-33
  div(class="app--section")
    ul.app--message--list
      each message in messageData
        li(id=message.id)
          h3 Conversation with <a href=message.sender.url target="_blank">#{message.sender.name}</a>
          ul.app--message--conversation
            li.app--message
              div.app--avatar(style="background-image: url("+message.sender.image+")")
                img(src=message.sender.image)
              p.app--message--text #{message.text}
              p.app--message--timestamp #{message.date}
